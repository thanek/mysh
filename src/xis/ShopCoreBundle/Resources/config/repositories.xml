<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="xis.shop.repository.product" class="xis\ShopCoreBundle\Repository\DoctrineProductRepository">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="xis.shop.pager.factory"/>
        </service>

        <service id="xis.shop.repository.category" class="xis\ShopCoreBundle\Repository\DoctrineCategoryRepository">
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>
    </services>

</container>