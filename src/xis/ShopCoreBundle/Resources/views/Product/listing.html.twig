{% extends "xisShopCoreBundle::layout.html.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <h1>{{ title }}</h1>
    <div class="filters">
        <ul>
        {% for filter in filters %}
            <li>{{ filter.name }}: {{ filter.value }}</li>
        {% endfor %}
        </ul>
    </div>
    <ul>
        {% for product in pager.results %}
            <li class="single_product">
                {{ include('xisShopCoreBundle:Product:single_listing.html.twig',{'product': product}) }}
            </li>
        {% endfor %}

    </ul>
    {{ pager(pager,'products_all') }}
{% endblock %}

